<resources>

    <declare-styleable name="CropImageView">
        <attr name="guidelines">
            <enum name="on" value="2"/>
            <enum name="onTouch" value="1"/>
            <enum name="off" value="0"/>
        </attr>
        <attr name="scaleType">
            <enum name="centerInside" value="0"/>
            <enum name="fitCenter" value="1"/>
        </attr>
        <attr name="cropShape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="fixAspectRatio" format="boolean"/>
        <attr name="aspectRatioX" format="integer"/>
        <attr name="aspectRatioY" format="integer"/>
        <attr name="borderLineThickness" format="float"/>
        <attr name="borderLineColor" format="color"/>
        <attr name="borderCornerThickness" format="float"/>
        <attr name="borderCornerOffset" format="float"/>
        <attr name="borderCornerLength" format="float"/>
        <attr name="borderCornerColor" format="color"/>
        <attr name="guidelinesThickness" format="float"/>
        <attr name="guidelinesColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="snapRadius" format="float"/>
        <attr name="showProgressBar" format="boolean"/>
    </declare-styleable>

</resources>